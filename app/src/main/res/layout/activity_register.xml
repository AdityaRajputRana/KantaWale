<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_fg"
    tools:context=".RegisterActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <!--    Todo: Make this ImageView adjust height or move top if space at bottom is less-->
    <ImageView
        android:id="@+id/topImg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/il_login_top"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="2.4" />

    <LinearLayout
        app:layout_constraintTop_toBottomOf="@id/topImg"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/welcomeTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_medium"
            android:text="@string/login_welcome"
            android:textSize="16sp"
            android:textColor="@color/primaryText" />

        <TextView
            android:id="@+id/headingTxt"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="28sp"
            android:fontFamily="@font/inter_bold"
            android:text="Sign Up"
            android:textColor="@color/primaryText" />

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/profileImageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_profile_placeholder"
            android:background="@drawable/bg_indicator_round"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_medium"
            android:text="Full Name"
            android:textSize="16sp"
            android:layout_marginTop="24dp"
            android:textColor="@color/primaryText" />
        <EditText
            android:id="@+id/nameEt"
            android:layout_width="match_parent"
            android:fontFamily="@font/inter_medium"
            android:textSize="16sp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:textColor="@color/primaryText"
            android:hint="Enter Full Name"
            android:textColorHint="@color/tertiaryText"
            android:background="@drawable/bg_et_main"
            android:layout_marginTop="8dp"
            android:padding="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_medium"
            android:text="Email"
            android:textSize="16sp"
            android:layout_marginTop="12dp"
            android:textColor="@color/primaryText" />
        <EditText
            android:id="@+id/emailEt"
            android:layout_width="match_parent"
            android:fontFamily="@font/inter_medium"
            android:textSize="16sp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:textColor="@color/primaryText"
            android:hint="Your email address"
            android:textColorHint="@color/tertiaryText"
            android:background="@drawable/bg_et_main"
            android:layout_marginTop="8dp"
            android:padding="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_medium"
            android:text="Phone Number"
            android:textSize="16sp"
            android:layout_marginTop="12dp"
            android:textColor="@color/primaryText" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_et_main"
            android:padding="12dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/countyCodeTxt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/inter_semibold"
                android:gravity="center"
                android:padding="4dp"
                android:text="+91"
                android:textColor="@color/primaryText"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:background="@color/markerColor" />

            <EditText
                android:id="@+id/phoneNumberEt"
                android:layout_width="0dp"
                android:fontFamily="@font/inter_medium"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="phone"
                android:textColor="@color/primaryText"
                android:hint="Your Mobile Number"
                android:textColorHint="@color/tertiaryText"
                android:background="@android:color/transparent"
                android:padding="4dp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_medium"
            android:text="Company Name"
            android:textSize="16sp"
            android:layout_marginTop="12dp"
            android:textColor="@color/primaryText" />
        <EditText
            android:id="@+id/companyEt"
            android:layout_width="match_parent"
            android:fontFamily="@font/inter_medium"
            android:textSize="16sp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textColor="@color/primaryText"
            android:hint="Your business or company's name"
            android:textColorHint="@color/tertiaryText"
            android:background="@drawable/bg_et_main"
            android:layout_marginTop="8dp"
            android:padding="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_medium"
            android:text="Company's GST Number"
            android:textSize="16sp"
            android:layout_marginTop="12dp"
            android:textColor="@color/primaryText" />
        <EditText
            android:id="@+id/gstET"
            android:layout_width="match_parent"
            android:fontFamily="@font/inter_medium"
            android:textSize="16sp"
            android:layout_height="wrap_content"
            android:inputType="textCapCharacters"
            android:textColor="@color/primaryText"
            android:hint="Enter company's GST number"
            android:textColorHint="@color/tertiaryText"
            android:background="@drawable/bg_et_main"
            android:layout_marginTop="8dp"
            android:padding="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_medium"
            android:text="City"
            android:textSize="16sp"
            android:layout_marginTop="12dp"
            android:textColor="@color/primaryText" />
        <EditText
            android:id="@+id/cityEt"
            android:layout_width="match_parent"
            android:fontFamily="@font/inter_medium"
            android:textSize="16sp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textColor="@color/primaryText"
            android:hint="Enter City/Town name"
            android:textColorHint="@color/tertiaryText"
            android:background="@drawable/bg_et_main"
            android:layout_marginTop="8dp"
            android:padding="16dp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_medium"
            android:text="State"
            android:textSize="16sp"
            android:layout_marginTop="12dp"
            android:textColor="@color/primaryText" />
        <Spinner
            android:id="@+id/stateSpinner"
            android:layout_width="match_parent"
            android:textSize="16sp"
            android:layout_height="wrap_content"
            android:textColor="@color/primaryText"
            android:spinnerMode="dropdown"
            android:textColorHint="@color/tertiaryText"
            android:background="@drawable/bg_et_main"
            android:layout_marginTop="8dp" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/continueBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:padding="16dp"
            android:textColor="@color/colorOnPrimary"
            android:text="@string/loginCta"
            android:backgroundTint="@color/color_cta"
            android:fontFamily="@font/inter_semibold"
            android:textSize="18sp"
            android:textAllCaps="false"
            app:cornerRadius="8dp"
            android:elevation="0dp"
            app:elevation="0dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:gravity="center"
            android:id="@+id/loginLayout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already have an account? "
                android:textColor="@color/primaryText"
                android:fontFamily="@font/inter_medium"
                android:textSize="16sp"  />

            <TextView
                android:id="@+id/loginTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign In"
                android:textColor="@color/color_cta"
                android:fontFamily="@font/inter_semibold"
                android:textSize="16sp"  />
        </LinearLayout>
    </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
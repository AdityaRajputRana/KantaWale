<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_fg"
    tools:context=".LoginActivity">

<!--    Todo: Make this ImageView adjust height or move top if space at bottom is less-->
    <ImageView
        android:id="@+id/topImg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/il_login_top"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="1.3" />

    <LinearLayout
        app:layout_constraintTop_toBottomOf="@id/topImg"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_medium"
            android:text="@string/login_welcome"
            android:textSize="16sp"
            android:textColor="@color/primaryText" />

        <TextView
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="28sp"
            android:fontFamily="@font/inter_bold"
            android:text="@string/signIp"
            android:textColor="@color/primaryText" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_medium"
            android:text="Phone Number"
            android:textSize="16sp"
            android:layout_marginTop="24dp"
            android:textColor="@color/primaryText" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_et_main"
            android:padding="12dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/countyCodeTxt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/inter_semibold"
                android:gravity="center"
                android:padding="4dp"
                android:text="+91"
                android:textColor="@color/primaryText"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:background="@color/markerColor" />

            <EditText
                android:id="@+id/phoneNumberEt"
                android:layout_width="0dp"
                android:fontFamily="@font/inter_medium"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="phone"
                android:textColor="@color/primaryText"
                android:hint="Your Mobile Number"
                android:textColorHint="@color/tertiaryText"
                android:background="@android:color/transparent"
                android:padding="4dp" />
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/continueBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:padding="16dp"
            android:textColor="@color/colorOnPrimary"
            android:text="@string/loginCta"
            android:backgroundTint="@color/color_cta"
            android:fontFamily="@font/inter_semibold"
            android:textSize="18sp"
            android:textAllCaps="false"
            app:cornerRadius="8dp"
            android:elevation="0dp"
            app:elevation="0dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:gravity="center"
            android:id="@+id/registerLayout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Don't have an account? "
                android:textColor="@color/primaryText"
                android:fontFamily="@font/inter_medium"
                android:textSize="16sp"  />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register Here"
                android:textColor="@color/color_cta"
                android:fontFamily="@font/inter_semibold"
                android:textSize="16sp"  />
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>